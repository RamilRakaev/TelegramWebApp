@page
@model TelegramWebApp.Pages.Admin.OptionsFormModel
@using Domain.Model;
@{
    ViewData["Title"] = "Настройки";
    var appOptions = new WebAppOptions();
}
<div class="row justify-content-center">
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label class="col-form-label">ApiKey</label>
            <input class="form-control" asp-for="@appOptions.ApiKey" />
            <span asp-validation-for="@appOptions.ApiKey"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label">CalandarId</label>
            <input class="form-control" asp-for="@appOptions.CalendarId" />
            <span asp-validation-for="@appOptions.CalendarId"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label">Bot Token</label>
            <input class="form-control" asp-for="@appOptions.BotToken" />
            <span asp-validation-for="@appOptions.BotToken"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label">Host Address</label>
            <input class="form-control" asp-for="@appOptions.HostAddress" />
            <span asp-validation-for="@appOptions.HostAddress"></span>
        </div>
        <button class="btn btn-dark">Отправить</button>
        <a class="btn btn-danger" asp-page="AdminPanel">Назад</a>
    </form>
</div>