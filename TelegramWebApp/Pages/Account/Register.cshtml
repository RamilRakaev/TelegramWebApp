@page
@model LibraryAccounting.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
    ViewData["Register"] = "disabled";
}
<div class="row justify-content-center">
    <div class="col-5">
        <h1 class="display-8 text-center mt-3">Введите пароль и почту для входа в систему.</h1>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="@Model.Register.UserName"></label>
                <input class="form-control" asp-for="@Model.Register.UserName" />
                <span asp-validation-for="@Model.Register.UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Register.Email"></label>
                <input class="form-control" asp-for="@Model.Register.Email" />
                <span asp-validation-for="@Model.Register.Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Register.Password"></label>
                <input class="form-control" asp-for="@Model.Register.Password" />
                <span asp-validation-for="@Model.Register.Password"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Register.PasswordConfirm"></label>
                <input class="form-control" asp-for="@Model.Register.PasswordConfirm" />
                <span asp-validation-for="@Model.Register.PasswordConfirm"></span>
            </div>
            <div class="form-inline">
                <button class="btn btn-dark">Зарегестрироваться</button>
                <a class="btn btn-danger" asp-page="/Account/Login">Авторизация</a>
            </div>
        </form>
    </div>
</div>